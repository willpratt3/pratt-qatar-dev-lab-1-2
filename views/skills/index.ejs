<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Here's Bill's Skills</title>
</head>
<body>
    <h1>Here's Bill's Skills</h1>
    <ul>
        <% skills.forEach(function(s, i) { %>
            <li>
                <form action="/skills/<%= idx %>?_method=DELETE"
                    class="delete-form" method="POST">
                    <button type="submit">X</button>
                </form>

                <a href="/skills<%= i %>"><strong>Skill:</strong> <%= s.skill %></a>

                <!-- <strong>Skill:</strong> <%= s.skill %>
                -
                <strong>Level:</strong> <%= s.level %> -->
            </li>
        <% });%>
    </ul>
</body>
</html>